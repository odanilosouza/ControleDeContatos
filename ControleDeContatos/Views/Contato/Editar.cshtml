@{
    ViewData["Title"] = "Editar de Contatos";
}



<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="email" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o e-mail do contato">
    </div>

    <div class="form-group">
        <label for="celular">Celular </label>
        <input type="email" class="form-control" placeholder="Digite o celular do contato">
    </div>



    <button type="submit" class="btn btn-primary btn-block ">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
